<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="backupClient" class="org.opennms.features.backup.client.api.BackupClient" scope="singleton"/>

    <bean id="backupUI" class="org.opennms.features.backup.client.ui.BackupUI" scope="prototype">
        <property name="backupClient" ref="backupClient"/>
    </bean>

    <bean id="backupUILink" class="org.opennms.features.vaadin.dashboard.config.ui.AdminPageNavEntry">
        <property name="url" value="admin/backupUI.jsp"/>
        <property name="name" value="Backup Config UI"/>
    </bean>

    <bean id="backupUIFactory" class="org.opennms.features.backup.client.ui.BackupUIFactory">
        <!-- Blueprint container bean -->
        <argument ref="blueprintContainer"/>
        <!-- Bean id of the Vaadin application prototype -->
        <argument value="backupUI"/>
    </bean>

    <service interface="org.ops4j.pax.vaadin.ApplicationFactory" ref="backupUIFactory">
        <service-properties>
            <entry key="alias" value="/backupui"/>
        </service-properties>
    </service>

    <service id="backupUIService" interface="org.opennms.web.navigate.PageNavEntry" ref="backupUILink">
        <service-properties>
            <entry key="Page" value="admin"/>
            <entry key="Category" value="operations"/>
            <entry key="registration.export" value="true"/>
        </service-properties>
    </service>
</blueprint>
