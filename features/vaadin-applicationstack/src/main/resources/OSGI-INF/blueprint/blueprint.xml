<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
	http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <reference id="nodeDao" interface="org.opennms.netmgt.dao.NodeDao" availability="mandatory"/>

    <bean id="nodeListProvider" class="org.opennms.vaadin.applicationstack.provider.NodeListProvider" scope="prototype">
        <argument ref="nodeDao"/>
    </bean>

    <bean id="applicationStackUI" class="org.opennms.vaadin.applicationstack.view.ApplicationStackUI" scope="prototype">
        <property name="nodeListProvider" ref="nodeListProvider"/>
    </bean>

    <bean id="applicationStackUIFactory" class="org.opennms.vaadin.applicationstack.view.ApplicationStackUIFactory">
        <!-- Blueprint container bean -->
        <argument ref="blueprintContainer"/>
        <!-- Bean id of the Vaadin application prototype -->
        <argument value="applicationStackUI"/>
    </bean>

    <service id="applicationStackService" interface="org.ops4j.pax.vaadin.ApplicationFactory"
             ref="applicationStackUIFactory">
        <service-properties>
            <entry key="alias" value="/vaadin-applicationstack"/>
            <entry key="widgetset" value="org.opennms.vaadin.applicationstack.view.AppWidgetSet"/>
        </service-properties>
    </service>
</blueprint>
