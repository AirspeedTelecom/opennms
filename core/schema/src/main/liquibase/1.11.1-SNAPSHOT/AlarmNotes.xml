<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- Add fields to alarms table to add sticky notes -->
    <changeSet author="derTak" id="1.10.3-alarm-note-feature">
        <addColumn tableName="alarms">
            <column name="stickynote" type="text"/>
            <column name="stickynotecreate" type="DATETIME"/>
            <column name="stickynoteupdate" type="DATETIME"/>
            <column name="stickynoteuser" type="varchar(256)"/> 
        </addColumn>
        
        <rollback>
            <dropColumn tableName="alarms" columnName="stickynote" />
            <dropColumn tableName="alarms" columnName="stickynotecreate" />
            <dropColumn tableName="alarms" columnName="stickynoteupdate" />
            <dropColumn tableName="alarms" columnName="stickynoteuser" />
        </rollback>
    </changeSet>

</databaseChangeLog>
