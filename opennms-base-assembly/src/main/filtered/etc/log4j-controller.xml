<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender class="org.apache.log4j.RollingFileAppender" name="CONTROLLER">
        <param value="${install.controllerlogs.dir}/controller.log" name="File"/>
        <param value="4" name="MaxBackupIndex"/>
        <param value="10MB" name="MaxFileSize"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param value="%d %-5p [%t] %c: %m%n" name="ConversionPattern"/>
        </layout>
    </appender>
    <root>
        <level value="debug"/>
        <appender-ref ref="CONTROLLER"/>
    </root>
</log4j:configuration>
