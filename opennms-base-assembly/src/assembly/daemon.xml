<assembly>
  <id>daemon</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/classes/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>target/classes/etc</directory>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/jasper</directory>
      <outputDirectory>etc/report-templates</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/classes/contrib</directory>
      <outputDirectory>contrib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/classes/logs</directory>
      <outputDirectory>logs</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/classes/share</directory>
      <outputDirectory>share</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/remote-poller/etc</directory>
      <outputDirectory>contrib/remote-poller</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/remote-poller/bin</directory>
      <outputDirectory>bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/remote-poller/lib</directory>
      <outputDirectory>bin</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>opennms_bootstrap.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>org.opennms:opennms-bootstrap:jar:${project.version}</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>opennms_install.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>org.opennms:opennms-install:jar:${project.version}</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>opennms_system_report.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>org.opennms.features:org.opennms.features.system-report:jar:${project.version}</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib/endorsed</outputDirectory>
      <includes>
        <include>javax.xml.bind:com.springsource.javax.xml.bind</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>javax.xml.bind:com.springsource.javax.xml.bind</exclude>
        <exclude>org.opennms:opennms-bootstrap</exclude>
        <exclude>org.opennms:opennms-install</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
