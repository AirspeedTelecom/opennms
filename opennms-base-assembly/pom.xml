<?xml version="1.0" encoding="UTF-8"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>opennms</artifactId>
    <groupId>org.opennms</groupId>
    <version>1.7.93-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>opennms-base-assembly</artifactId>
  <packaging>tgz</packaging>
  <name>OpenNMS Base Assembly</name>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/filtered</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-xsds</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
	         <configuration>
	           <outputDirectory>${project.build.directory}</outputDirectory>
	           <artifactItems>
	             <artifactItem>
	               <groupId>org.opennms</groupId>
	               <artifactId>drools-correlation-engine</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
	             <artifactItem>
	               <groupId>org.opennms</groupId>
	               <artifactId>opennms-config</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
	             <artifactItem>
	               <groupId>org.opennms</groupId>
	               <artifactId>opennms-dao</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
	             <artifactItem>
	               <groupId>org.opennms</groupId>
	               <artifactId>opennms-model</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
	             <artifactItem>
	               <groupId>org.opennms</groupId>
	               <artifactId>opennms-provision-persistence</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
	             <artifactItem>
	               <groupId>org.opennms</groupId>
	               <artifactId>opennms-link-provisioning-adapter</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
	             <artifactItem>
	               <groupId>org.opennms</groupId>
	               <artifactId>opennms-qosdaemon</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
	             <artifactItem>
	               <groupId>org.opennms</groupId>
	               <artifactId>opennms-reporting</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
	             <artifactItem>
	               <groupId>org.opennms</groupId>
	               <artifactId>opennms-webapp</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
                <artifactItem>
                  <groupId>org.opennms.features.sms-reflector</groupId>
                  <artifactId>sms-monitor</artifactId>
                  <version>${project.version}</version>
                  <classifier>xsds</classifier>
	             </artifactItem>
	           </artifactItems>
	         </configuration>
          </execution>
          <execution>
            <id>unpack-remote-poller</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
	         <configuration>
	           <outputDirectory>${project.build.directory}</outputDirectory>
	           <artifactItems>
	             <artifactItem>
	               <groupId>org.opennms.features</groupId>
	               <artifactId>org.opennms.features.remote-poller-standalone</artifactId>
                  <version>${project.version}</version>
                  <classifier>remote-poller</classifier>
	             </artifactItem>
	           </artifactItems>
	         </configuration>
	       </execution>
          <execution>
            <id>unpack-jnlp</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
	         <configuration>
	           <outputDirectory>${project.build.directory}</outputDirectory>
	           <artifactItems>
	             <artifactItem>
	               <groupId>org.opennms.features</groupId>
	               <artifactId>org.opennms.features.remote-poller-jnlp</artifactId>
                  <version>${project.version}</version>
                  <classifier>jnlp</classifier>
	             </artifactItem>
	           </artifactItems>
	         </configuration>
	       </execution>
          <execution>
            <id>unpack-webapp</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
	         <configuration>
	           <outputDirectory>${project.build.directory}/dependency-webapp</outputDirectory>
	           <artifactItems>
	             <artifactItem>
	               <groupId>org.opennms.features</groupId>
	               <artifactId>org.opennms.features.webapp-full</artifactId>
                  <version>${project.version}</version>
	               <type>war</type>
	             </artifactItem>
	           </artifactItems>
	         </configuration>
	       </execution>
          <execution>
            <id>unpack-remoting</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
	         <configuration>
	           <outputDirectory>${project.build.directory}/dependency-remoting</outputDirectory>
	           <artifactItems>
                <artifactItem>
                  <groupId>org.opennms.features</groupId>
                  <artifactId>org.opennms.features.http-remoting</artifactId>
                  <version>${project.version}</version>
                  <type>war</type>
	             </artifactItem>
	           </artifactItems>
	         </configuration>
	       </execution>
          <execution>
            <id>unpack-rest</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
	         <configuration>
	           <outputDirectory>${project.build.directory}/dependency-rest</outputDirectory>
	           <artifactItems>
                <artifactItem>
                  <groupId>org.opennms.features</groupId>
                  <artifactId>org.opennms.features.rest</artifactId>
                  <version>${project.version}</version>
                  <type>war</type>
	             </artifactItem>
	           </artifactItems>
	         </configuration>
	       </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.opennms.maven.plugins</groupId>
        <artifactId>tgz-maven-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <descriptors>
            <descriptor>src/assembly/daemon.xml</descriptor>
          </descriptors>
          <appendAssemblyId>false</appendAssemblyId>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <encoding>UTF-8</encoding>
          <escapeString>\</escapeString>
        </configuration>
      </plugin>
    </plugins>
  </build>
